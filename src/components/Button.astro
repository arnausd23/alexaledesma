---
  interface Props {
    className: string;
    href?: string;
    id?: string;
  }
  const {className, href, id} = Astro.props;
---

<a id={id} class={`button text-center w-fit cursor-pointer ${className}`} href={href}>
  <slot/>
</a>

<style is:global>
  .button:hover svg path {
    stroke: white
  }
</style>